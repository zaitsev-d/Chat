<Window x:Class="Chat_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="282*"/>
            <ColumnDefinition Width="115*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="texBoxUserName" HorizontalAlignment="Left" Height="34" Margin="257,9,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="527" Grid.ColumnSpan="2"/>
        <Button x:Name="buttonConnect" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="242" Height="34"/>
        <ListBox x:Name="listBoxChat" HorizontalAlignment="Left" Height="273" Margin="10,48,0,0" VerticalAlignment="Top" Width="774" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxMessage" HorizontalAlignment="Left" Height="84" Margin="10,326,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="774" Grid.ColumnSpan="2" KeyDown="ToMessage_KeyDown"/>

    </Grid>
</Window>
